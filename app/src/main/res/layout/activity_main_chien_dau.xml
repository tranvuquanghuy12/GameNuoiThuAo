<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainChienDau">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtMyTienDo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:fontFamily="@font/pixel2"
            android:text=""
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.101"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.043" />

        <TextView
            android:id="@+id/txtTienDo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pixel2"
            android:text="Tiến độ:"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.101"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.043" />

    </FrameLayout>

    <ImageView
        android:id="@+id/imageViewMap"
        android:layout_width="390dp"
        android:layout_height="460dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.291"
        app:srcCompat="@drawable/abgcd1" />

    <FrameLayout
        android:id="@+id/btnAi1"
        android:layout_width="100dp"
        android:layout_height="92dp"
        android:layout_marginTop="420dp"
        android:layout_marginEnd="260dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivAi1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/icon_battel"/>

        <TextView
            android:id="@+id/tvAi1"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="bottom"
            android:background="#FFFFFF"
            android:fontFamily="@font/pixel2"
            android:gravity="center"
            android:text="Ải 1"
            android:textColor="#D32F2F"
            android:textSize="16sp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/btnAi2"
        android:layout_width="100dp"
        android:layout_height="92dp"
        android:layout_marginTop="330dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivAi2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/icon_battel"
            android:contentDescription="Nút Ăn" /> <!-- Đã thêm -->

        <TextView
            android:id="@+id/tvAi2"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="bottom"
            android:background="#FFFFFF"
            android:fontFamily="@font/pixel2"
            android:gravity="center"
            android:text="Ải 2"
            android:textColor="#D32F2F"
            android:textSize="16sp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/btnAi3"
        android:layout_width="100dp"
        android:layout_height="92dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="260dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivAi3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/icon_battel"
            android:contentDescription="Nút Ăn" /> <!-- Đã thêm -->

        <TextView
            android:id="@+id/tvAi3"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="bottom"
            android:background="#FFFFFF"
            android:fontFamily="@font/pixel2"
            android:gravity="center"
            android:text="Ải 3"
            android:textColor="#D32F2F"
            android:textSize="16sp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/btnAi4"
        android:layout_width="100dp"
        android:layout_height="92dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivAi4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/icon_battel"
            android:contentDescription="Nút Ăn" /> <!-- Đã thêm -->

        <TextView
            android:id="@+id/tvAi4"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="bottom"
            android:background="#FFFFFF"
            android:fontFamily="@font/pixel2"
            android:gravity="center"
            android:text="Ải 4"
            android:textColor="#D32F2F"
            android:textSize="16sp" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>